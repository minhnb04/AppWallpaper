<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%include css%>
    <title>Wallpaper HD</title>
</head>
<body class="container">
<%include nav%>
<h1><%= title %></h1>
<form method="post" action="/addImgAmerica" enctype="application/x-www-form-urlencoded" style="text-align: right;padding: 5px;margin: 10px">

    <input name="content" placeholder="Nhap noi dung anh:">

    <input name="date" placeholder="Nhap date:">

    <input name="linkImg" placeholder="Nhap link anh:">

    <button type="submit">Add</button>

</form>

</form>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <%for(var i=0;i<data.length;i++){%>
        <div class="col">
            <div class="card shadow-sm">
                <img class="bd-placeholder-img card-img-top" src=<%= data[i].linkImg %> style="object-fit: cover; width="100%" height="225">
                <div class="card-body">
                    <p class="card-text"><%= data[i].content %></p>
                    <p class="card-text">Ng√†y: <%= data[i].date %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <form method="get" action="/viewAmerica">
                                <input name="id" value="<%= data[i]._id %>" hidden>
                                <button type="submit" class="btn btn-sm btn-outline-secondary">View</button>
                            </form>

<!--                            chua sua xong-->
                            <form method="get" action="/sua">
                                <input name="id" value="<%= data[i]._id %>" hidden>
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Update</button>
                            </form>
                            <form method="get" action="/deleteAmerica">
                                <input name="id" value="<%= data[i]._id %>" hidden>
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <%}%>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


</body>
</html>